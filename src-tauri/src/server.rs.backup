// Handler for GET /followers (Polling)
#[axum::debug_handler]
async fn get_followers(State(state): State<ServerState>) -> impl IntoResponse {
    let app_state = &state.app_state;
    let mut real_followers: Vec<crate::chzzk::FollowerItem> = Vec::new();

    // 1. Fetch from Chzzk API
    let (cookies, user_id_hash) = {
        let cookies_lock = app_state.cookies.lock().unwrap();
        let hash_lock = app_state.user_id_hash.lock().unwrap();
        (cookies_lock.clone(), hash_lock.clone())
    };

    if let (Some(cookies), Some(hash)) = (cookies, user_id_hash) {
        match chzzk::get_followers(&app_state.client, &cookies, &hash).await {
            Ok(response) => {
                if let Some(content) = response.content {
                    real_followers = content.data;
                }
            }
            Err(e) => {
                println!("[Server] Failed to fetch followers: {}", e);
                // Continue to serve test queue even if API fails
            }
        }
    }

    let now = SystemTime::now()
        .duration_since(UNIX_EPOCH)
        .unwrap()
        .as_millis();

    // 2. Process New Followers
    if !real_followers.is_empty() {
        let mut new_followers = Vec::new();
        
        {
            let mut known = app_state.known_followers.lock().unwrap();
            let mut real_queue = app_state.real_queue.lock().unwrap();
            let mut rublis_last_seen = app_state.rublis_last_seen.lock().unwrap();
            let mut initial_count = app_state.initial_follower_count.lock().unwrap();
            let mut last_known_id = app_state.last_known_follower_id.lock().unwrap();
            let mut recent_followers = app_state.recent_followers.lock().unwrap();

            // í•˜ì´ë¸Œë¦¬ë“œ íŒ”ë¡œì›Œ ê°ì§€ ì‹œìŠ¤í…œ
            if initial_count.is_none() && !real_followers.is_empty() {
                // ì²« ë²ˆì§¸ í˜¸ì¶œ: ì´ˆê¸°í™”
                let current_count = real_followers.len();
                *initial_count = Some(current_count);
                
                // ìµœì‹  íŒ”ë¡œì›Œ ID ì €ì¥ (ì²« ë²ˆì§¸ íŒ”ë¡œì›Œ)
                if let Some(first_follower) = real_followers.first() {
                    *last_known_id = Some(first_follower.user.user_id_hash.clone());
                }
                
                // ìµœê·¼ íŒ”ë¡œì›Œë“¤ ì´ˆê¸°í™” (ìµœëŒ€ 50ëª…)
                recent_followers.clear();
                for follower in real_followers.iter().take(50) {
                    if follower.user.nickname != "ë£¨ë¸”ë¦¬ìŠ¤" {
                        recent_followers.push_back(follower.user.user_id_hash.clone());
                    }
                }
                
                // ë£¨ë¸”ë¦¬ìŠ¤ íŠ¹ë³„ ì²˜ë¦¬
                if let Some(_rublis) = real_followers.iter().find(|f| f.user.nickname == "ë£¨ë¸”ë¦¬ìŠ¤") {
                    *rublis_last_seen = Some(now);
                    println!("[Server] ë£¨ë¸”ë¦¬ìŠ¤ currently following - tracking for duplicate prevention");
                }
                
                println!("[Server] Hybrid system initialized - Count: {}, Recent followers: {}", 
                    current_count, recent_followers.len());
                
            } else if let Some(init_count) = *initial_count {
                // ì •ìƒì ì¸ íŒ”ë¡œì›Œ ê°ì§€ (í•˜ì´ë¸Œë¦¬ë“œ ë°©ì‹)
                let current_count = real_followers.len();
                
                // 1ë‹¨ê³„: íŒ”ë¡œì›Œ ìˆ˜ ë¹ ë¥¸ í•„í„°ë§
                if current_count < init_count.saturating_sub(10) {
                    println!("[Server] Large follower decrease detected, skipping check");
                    return Json(serde_json::json!({ "data": [] }));
                }
                
                // 2ë‹¨ê³„: ìµœì‹  íŒ”ë¡œì›Œë“¤ë§Œ ì²´í¬ (ìµœëŒ€ 20ëª…)
                let check_count = std::cmp::min(20, real_followers.len());
                let latest_followers = &real_followers[..check_count];
                
                println!("[Server] Checking {} latest followers (Current: {}, Initial: {})", 
                    check_count, current_count, init_count);
                
                // ë£¨ë¸”ë¦¬ìŠ¤ íŠ¹ë³„ ì²˜ë¦¬ (ê¸°ì¡´ ë¡œì§ ìœ ì§€)
                let rublis_follower = real_followers.iter().find(|f| f.user.nickname == "ë£¨ë¸”ë¦¬ìŠ¤");
                
                if let Some(rublis) = rublis_follower {
                    // ë£¨ë¸”ë¦¬ìŠ¤ê°€ í˜„ì¬ íŒ”ë¡œìš° ì¤‘
                    if let Some(last_seen) = *rublis_last_seen {
                        // ì´ë¯¸ í™•ì¸í•œ ì ì´ ìˆìŒ - ì¤‘ë³µ ë°©ì§€
                        if now - last_seen < 5000 { // 5ì´ˆ ë‚´ ì¤‘ë³µ ë°©ì§€
                            println!("[Server] ë£¨ë¸”ë¦¬ìŠ¤ duplicate prevented (last seen {}ms ago)", now - last_seen);
                        } else {
                            // 5ì´ˆ ì´ìƒ ì§€ë‚¬ìœ¼ë©´ ìƒˆë¡œìš´ íŒ”ë¡œìš°ë¡œ ì²˜ë¦¬
                            println!("[Server] ë£¨ë¸”ë¦¬ìŠ¤ re-follow detected after {}ms", now - last_seen);
                            new_followers.push(rublis.clone());
                            real_queue.push_back(crate::state::RealFollowerQueueItem {
                                follower: rublis.clone(),
                                created_at: now,
                            });
                            *rublis_last_seen = Some(now);
                        }
                    } else {
                        // ì²˜ìŒ í™•ì¸í•˜ëŠ” ê²½ìš°
                        println!("[Server] ë£¨ë¸”ë¦¬ìŠ¤ first detection - always treated as new");
                        new_followers.push(rublis.clone());
                        real_queue.push_back(crate::state::RealFollowerQueueItem {
                            follower: rublis.clone(),
                            created_at: now,
                        });
                        *rublis_last_seen = Some(now);
                    }
                } else {
                    // ë£¨ë¸”ë¦¬ìŠ¤ê°€ íŒ”ë¡œìš° í•´ì œí•¨ - ì¶”ì  ì´ˆê¸°í™”
                    if rublis_last_seen.is_some() {
                        println!("[Server] ë£¨ë¸”ë¦¬ìŠ¤ unfollowed - resetting tracking");
                        *rublis_last_seen = None;
                    }
                }
                
                // 3ë‹¨ê³„: ì¼ë°˜ íŒ”ë¡œì›Œ ì²˜ë¦¬ (ë©”ëª¨ë¦¬ ê¸°ë°˜)
                for follower in latest_followers {
                    if follower.user.nickname == "ë£¨ë¸”ë¦¬ìŠ¤" {
                        continue; // ë£¨ë¸”ë¦¬ìŠ¤ëŠ” ìœ„ì—ì„œ ì´ë¯¸ ì²˜ë¦¬í•¨
                    }
                    
                    // ìµœê·¼ íŒ”ë¡œì›Œ ë©”ëª¨ë¦¬ì—ì„œ í™•ì¸
                    if !recent_followers.contains(&follower.user.user_id_hash) {
                        println!("[Server] New follower detected (hybrid): {}", follower.user.nickname);
                        
                        new_followers.push(follower.clone());
                        real_queue.push_back(crate::state::RealFollowerQueueItem {
                            follower: follower.clone(),
                            created_at: now,
                        });
                        
                        // ìµœê·¼ íŒ”ë¡œì›Œ ë©”ëª¨ë¦¬ ì—…ë°ì´íŠ¸ (ìµœëŒ€ 50ëª… ìœ ì§€)
                        recent_followers.push_front(follower.user.user_id_hash.clone());
                        if recent_followers.len() > 50 {
                            recent_followers.pop_back();
                        }
                        
                        // í˜¸í™˜ì„±ì„ ìœ„í•´ ê¸°ì¡´ known_followersë„ ì—…ë°ì´íŠ¸
                        known.insert(follower.user.user_id_hash.clone());
                    }
                }
                
                // ë§ˆì§€ë§‰ í™•ì¸í•œ íŒ”ë¡œì›Œ ID ì—…ë°ì´íŠ¸
                if let Some(first_follower) = real_followers.first() {
                    *last_known_id = Some(first_follower.user.user_id_hash.clone());
                }
            }
        } // Mutex guards are dropped here
        
        // Now broadcast new followers without holding any locks
        for follower in new_followers {
            state.ws_manager.broadcast_new_follower(follower).await;
        }
    }

    // 3. Cleanup Queues
    {
        let now = SystemTime::now()
            .duration_since(UNIX_EPOCH)
            .unwrap()
            .as_millis();

        // Clean Real Queue
        let mut real_queue = app_state.real_queue.lock().unwrap();
        while let Some(item) = real_queue.front() {
            if now - item.created_at > 30000 {
                real_queue.pop_front();
            } else {
                break;
            }
        }

        // Clean Test Queue
        let mut test_queue = app_state.test_queue.lock().unwrap();
        while let Some(item) = test_queue.front() {
            // Parsing "test_{ts}" from userIdHash
            if let Some(ts_str) = item.user.user_id_hash.strip_prefix("test_") {
                if let Ok(ts) = ts_str.parse::<u128>() {
                    if now - ts > 5000 { // 5 seconds for test items
                        println!("[Server] Removing expired test follower: {}", item.user.nickname);
                        test_queue.pop_front();
                        continue;
                    }
                }
            }
            break;
        }
    }

    // 4. Combine Queues (Test + Real)
    let mut combined_data = Vec::new();
    let mut seen = std::collections::HashSet::new();

    // Add Test Queue (Iterate instead of Pop)
    {
        let test_queue = app_state.test_queue.lock().unwrap();
        for item in test_queue.iter() {
            if !seen.contains(&item.user.user_id_hash) {
                seen.insert(item.user.user_id_hash.clone());
                combined_data.push(item.clone());
            }
        }
    }

    // Add Real Queue
    {
        let real_queue = app_state.real_queue.lock().unwrap();
        for item in real_queue.iter() {
            if !seen.contains(&item.follower.user.user_id_hash) {
                seen.insert(item.follower.user.user_id_hash.clone());
                combined_data.push(item.follower.clone());
            }
        }
    }

    // Add remaining history from API (if not seen)
    for f in real_followers {
        if !seen.contains(&f.user.user_id_hash) {
            combined_data.push(f);
        }
    }

    Json(json!({
        "code": 200,
        "message": "Success",
        "content": {
            "page": 0,
            "size": 10,
            "data": combined_data
        }
    }))
}

