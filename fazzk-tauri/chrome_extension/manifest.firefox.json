{
    "manifest_version": 3,
    "name": "Fazzk Login Helper",
    "version": "1.3",
    "description": "Automatically syncs Naver cookies to Fazzk app",
    "permissions": [
        "cookies",
        "activeTab",
        "scripting",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://*.naver.com/*",
        "https://*.chzzk.naver.com/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Fazzk Helper"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "fazzk@dodoroi.com",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}