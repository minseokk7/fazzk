{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fazzk",
  "version": "2.0.0",
  "identifier": "com.dodoroi.fazzk",
  "build": {
    "frontendDist": "../pages"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Fazzk",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../pages/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "Korean"
        ],
        "displayLanguageSelector": false
      }
    }
  }
}